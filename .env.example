# API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_optional
NASA_API_KEY=DEMO_KEY  # NASA demo key works for basic requests

# Application Settings
APP_ENV=development
APP_DEBUG=True
APP_PORT=8000
APP_HOST=0.0.0.0

# Database & Storage
REDIS_URL=redis://localhost:6379/0
VECTOR_STORE_PATH=./data/vector_store
DOCUMENT_CACHE_PATH=./data/cache

# LLM Settings
PRIMARY_LLM_MODEL=gpt-3.5-turbo
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
MAX_TOKENS=4096
LLM_TEMPERATURE=0.1

# Rate Limiting
NASA_API_RATE_LIMIT=1000  # requests per hour
USER_RATE_LIMIT=100       # requests per minute

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
